<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.pork.model.ClubProgram" table="ClubProgram">
        <meta attribute="class-description">
            This class describe Contracts.
        </meta>
        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string" unique="true"/>
        <property name="description" column="description" type="string"/>
        <property name="timeUsing" column="timeUsing" type="int"/>
        <property name="daysActive" column="daysActive" type="int"/>
        <property name="price" column="price" type="int"/>

        <set name="contracts" table="Membership" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="clubprogram_id" not-null="true"/>
            </key>
            <many-to-many entity-name="ru.pork.model.Contracts">
                <column name="contract_id" not-null="true"/>
            </many-to-many>
        </set>

        <set name="services" table="ServiceConsist" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="clubprogram_id" not-null="true"/>
            </key>
            <many-to-many entity-name="ru.pork.model.Service">
                <column name="service_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>