<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.pork.model.Person" table="Person">
        <meta attribute="description">
            This file describe Person class
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="firstName" column="firstName" type="string"/>
        <property name="lastName" column="lastName" type="string"/>
        <property name="secondName" column="secondName" type="string"/>
        <property name="birthDate" column="birthDate" type="date"/>
        <property name="description" column="description" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="gender" column="gender" type="byte"/>
        <many-to-one name="abonCard" column="abonCard" class="ru.pork.model.AbonCard" not-null="true"/>
    </class>
</hibernate-mapping>